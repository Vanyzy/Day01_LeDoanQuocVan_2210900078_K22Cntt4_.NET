<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin CPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @RenderSection("Css", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a asp-area="Admins" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admins" asp-controller="SanPham" asp-action="Index">Sản phẩm</a></li>
                <li><a asp-area="Admins" asp-controller="DonHang" asp-action="Index">Đơn hàng</a></li>
                <li><a asp-area="Admins" asp-controller="NguoiDung" asp-action="Index">Người dùng</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
